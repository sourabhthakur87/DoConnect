        "properties": {
          "questionTitle": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "questionText": {
            "maxLength": 1000,
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegisterRequest": {
        "required": [
